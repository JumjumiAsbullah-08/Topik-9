USES CRT,GRAPH;
VAR GD,GM,XA,YA,XB,YB,XC,YC,XD,YD,XE,YE,I:INTEGER;

PROCEDURE INIT;
BEGIN
 GD:=VGA;
 GM:=VGAHI;
 INITGRAPH(GD,GM,'D:\TP\BGI');
END;

PROCEDURE STAR(X1,Y1,X2,Y2,X3,Y3,X4,Y4,X5,Y5:INTEGER);
BEGIN
 LINE(X1,Y1,X2,Y2);
 LINE(X2,Y2,X3,Y3);
 LINE(X3,Y3,X4,Y4);
 LINE(X4,Y4,X5,Y5);
 LINE(X5,Y5,X1,Y1);
END;

PROCEDURE SKALA(X1,Y1,X2,Y2,X3,Y3,X4,Y4,X5,Y5,SX,SY:INTEGER;
VAR XA,YA,XB,YB,XC,YC,XD,YD,XE,YE:INTEGER);
BEGIN
 XA:=X1*SX;
 YA:=Y1*SY;
 XB:=X2*SX;
 YB:=Y2*SY;
 XC:=X3*SX;
 YC:=Y3*SY;
 XD:=X4*SX;
 YD:=Y4*SY;
 XE:=X5*SX;
 YE:=Y5*SY;
END;

{MAIN}
BEGIN
 INIT;
 SETBKCOLOR(11);
 SETCOLOR(5);
 STAR(10,35,20,5,30,35,4,16,36,16);
 READLN;
 FOR I:= 1 TO 20 DO
 BEGIN
  SKALA(10,35,20,5,30,35,4,16,36,16,I,I,XA,YA,XB,YB,XC,YC,XD,YD,XE,YE);
  STAR(XA,YA,XB,YB,XC,YC,XD,YD,XE,YE);
  SOUND(77*I);
  DELAY(1000);
  NOSOUND;
  CLEARVIEWPORT;
 END;
 I:=20;
 WHILE I >= 1 DO
 BEGIN
  SETCOLOR(4);
  CLEARVIEWPORT;
  SKALA(10,35,20,5,30,35,4,16,36,16,I,I,XA,YA,XB,YB,XC,YC,XD,YD,XE,YE);
  STAR(XA,YA,XB,YB,XC,YC,XD,YD,XE,YE);
  I:=I-1;
  SOUND(15*I);
  DELAY(1000);
  NOSOUND;
 END;
 READLN;
 CLOSEGRAPH;
END.
